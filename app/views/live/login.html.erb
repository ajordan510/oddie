<!-- main body for the log on page -->
<div id="container">
	<h1 id="log_h1">Log In</h1> 	
	<% if flash[:bad_login] %>
		<div class = "error_message"><%= flash[:bad_login] %></div>
	<% end %>

	<% if @logged_in_user.nil? %>
	<% else %>
		<% @logged_in_user.errors.full_messages.each do |msg| %>
			<p class="error_message"> <%= msg %></p>
		<% end %>
	<% end %>

	<%= form_tag(:action => :post_login, :method => :post) do %>
		<p>
		<%= label_tag(:login_val, "Email Address")    %> <br/>
		<%= text_field_tag(:login_val)  %> <br/>
		</p>
		<p>
		<%= label_tag(:pass_val, "Password")    %> <br/>
		<%= password_field_tag(:pass_val)  %> <br/>
		</p>
		<p>
		<%= submit_tag "Login", :id=>"login_submit" %>
		</p>
	<% end %>

	<p id="register"> or <%= link_to 'Register', "/live/sign_up/" %> </p>
</div>
